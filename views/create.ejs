<%- include("_header") -%>

<h1>Create New Customer</h1>

<form action="/create" method="POST" id="create">
    <p>
        <label for="id">ID:</label>
        <input name="id" id="id" required type="text" pattern="\d*"> <!-- regex -->
        <span>(required)</span>
    </p>
    <p>
        <label for="fname">First Name:</label>
        <input type="text" name="fname" id="fname" required>
        <span>(required)</span>
    </p>
    <p>
        <label for="lname">Last Name:</label>
        <input type="text" name="lname" id="lname" required>
        <span>(required)</span>
    </p>
    <p>
        <label for="state">State:</label>
        <input type="text" name="state" id="state" pattern="[a-zA-Z]{1,2}">
    </p>
    <p>
        <label for="sales">Sales YTD:</label>
        <input name="sales" id="sales" type="text" pattern="\d*">
    </p>
    <p>
        <label for="prev">Previous Years Sales:</label>
        <input name="prev" id="prev"  type="text" pattern="\d*">
    </p>

    <button class="btn btn-primary" type="submit">Create</button>
    <button class="btn btn-primary" type="reset">Reset</button>
</form>

<% if(message) { %>
    <p><%= message %></p>
<% } %>

<%- include("_footer") -%>
